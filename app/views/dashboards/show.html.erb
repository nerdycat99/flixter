<div class="booyah-box col-10 offset-1">
  <h1>what i'm learning</h1>
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, class: 'ing-fluid' %>
    <br />
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to 'more info', course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
    <hr class="col8 offset-2">
    <br class="clr" />
  <% end %>

  <h1>what i'm teaching</h1>
  <% current_user.courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, instructor_course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, class: 'img-fluid' %>
    <br />
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to 'more info', instructor_course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
    <hr class="col8 offset-2">
    <br class="clr" />
  <% end %>

</div>

