<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <br />
  <div class="row">
    <div class="col-sm-4 col-12">
      <%= image_tag current_course.image, class: 'img-fluid' %>
    </div>
    <div class="col-sm-8 col-12">
      <%= current_course.description %>
    </div>
  </div>
  <br />
  <%= link_to 'preview as student', course_path(current_course), class: 'btn btn-warning float-right' %>
  <div class="text-left">
  	<%= link_to 'add new section', new_instructor_course_section_path(current_course), class: 'btn btn-primary' %>
  </div>
  <br />

  <ul>
  	<% current_course.sections.each do |section| %>
  		<li>
        <hr>
  			<%= section.title %>
        <%= link_to 'add new lesson to section', new_instructor_section_lesson_path(section), class: 'float-right btn btn-primary btn-sm' %>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
  		</li>
  	<% end %>
  </ul>

</div>