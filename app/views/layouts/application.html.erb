<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/6.4.0/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div class="flex-content-container">
      <nav class="navbar navbar-toggleable-md navbar-inverse bg-primary">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to 'Flixster', root_path, class: 'navbar-brand' %>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'see all courses', courses_path %>
            </li> 
          </ul>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'my dashboard', dashboard_path %>
              </li>
              <li class="nav-item">
                <%= link_to 'log out', destroy_user_session_path, :method => :delete %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'log in', new_user_session_path %>
                &nbsp;
                <%= link_to 'sign up', new_user_registration_path %>  
              </li>
            <% end %>
          </ul>

        </div>
      </nav>

        <% if notice.present? %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p class="alert"><%= alert %></p>
        <% end %>
        
        
        <%= yield %>
    </div>
    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
            <b>Teachers</b>
            <br />
            <%= link_to 'teach a course', new_instructor_course_path %>
            <br />
            <%= link_to 'my dashboard', dashboard_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>About</b>
            <br />
            <%= link_to 'privacy', privacy_path %>
            <br />
            <%= link_to 'team', team_path %>
            <br />
            <%= link_to 'careers', careers_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>Contact</b>
            <br />
            nev@test.com
            <br />
            An Address
            <br />
            A City and Code
          </div>
          <div class="col-12 col-sm-3 social-media">
            <b>Social</b>
            <br />
            <br />
            <%= link_to 'https://www.instagram.com/nathasha_chabelnique' do %>
              <span class="fa fa-instagram fa-2x social-media-icons"></span>
            <% end %>
            <%= link_to 'https://github.com/nerdycat99' do %>
              <span class="fa fa-github-square fa- fa-2x social-media-icons"></span>
            <% end %>
            <%= link_to 'https://www.facebook.com/Nathasha-Chabelnique-355705564632110' do %>
              <span class="fa fa-facebook-square fa-2x social-media-icons"></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <script src="https://vjs.zencdn.net/6.4.0/video.js"></script>
    <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  </body>
</html>
